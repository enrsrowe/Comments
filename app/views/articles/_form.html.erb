
<%= form_for(@article, html: {multipart: true}) do |f| %>
  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
      <% @article.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title, :class => 'span9' %> <!-- Uncommented textarea in scaffold.css as it forced 206px wide -->
  </div>
  <div class="field">
    <%= f.label :body %><br />
    <%= f.text_area :body, :class => 'span12' %>
  </div>

  <p>
    <%= f.label :tag_list %>
    <br/>
    <%= f.text_field :tag_list, :class => 'span12'  %>
  </p>

  <!-- Show Image Field -->
  <p>
    <% if @article.image.exists? %>
      <%= image_tag @article.image.url(:thumb) %><br />
    <% end %>

    <%= f.label :image, "Attach an Image" %>
    <br/>
    <%= f.file_field :image %>
  </p>

    <div class="actions">
    <%= f.submit :class => 'btn btn-success btn-large pull-right'%>
  </div>

<% end %>
