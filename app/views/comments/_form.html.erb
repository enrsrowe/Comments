<h3>Post a Comment</h3>

<!-- <p>Comment form will go here...</p> -->

<%= form_for @comment do |f| %>
	<%= f.hidden_field :article_id %>
	<p>
		<%= f.label :author_name, "Your Name" %>
		<br/>
		<%= f.text_field :author_name %>
	</p>
	<p>
		<%= f.label :body %>
		<br/>
		<%= f.text_area :body %>
	</p>
	<p>
		<%= f.submit 'Submit' %>
	</p>
<% end %>